<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: user) do |f| %>
      <%= f.label :full_name %>
      <%= f.text_field :full_name%>

      <%= f.label :email %>
      <%= f.email_field :email%>

      <%= f.label :number %>
      <%= f.text_field :number%>

      <%= f.label :password %>
      <%= f.password_field :password%>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>